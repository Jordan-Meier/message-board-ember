{{#if updateQuestionForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=question.title class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Question Author</label>
        {{input value=author id="author" placeholder=question.author class="form-control"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea rows="8" cols="40" value=content id="content" placeholder=question.content class="form-control"}}
      </div>

      <button class="btn btn-success"{{action 'updateQuestion' question}}>Edit</button>

    </form>
  </div>
{{else}}
  <button class="btn btn-info"{{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
