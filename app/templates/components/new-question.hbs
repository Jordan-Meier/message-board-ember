{{#if addNewQuestion}}
  <h3>Ask a Question!</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Question Title</label>
        {{input value=title id="title" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Question Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea rows="8" cols="40" value=content id="content" class="form-control"}}
      </div>

      <button {{action 'saveQuestion'}}>Add Question</button>
    </form>
  </div>
{{else}}
  <button class="btn-lg btn-primary" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
